<div class="container">
	<div class="col-xs-3"></div>
	<div class="col-xs-5">
		<h2 class="sub-title">ユーザー設定</h2>
		<div class="user-setting">
			<br>
			<br>

			<!--ユーザー設定-->
			<%= form_for(@user) do |f| %>
				<div class="field">
					<%= f.label :name %>
					<%= f.text_field :name, autofocus: true, class: "form-control", id:"inputEmail", placeholder:"名前" %>
				</div>
				<br>
				<div class="field">
					<%= f.label :image %>
					<%= f.attachment_field :profile_image, class: "user_image" %>
				</div>
				<br>

				<div class="field">
					<%= f.label :introduction %>
					<%= f.text_area :introduction, class: "introduction" %>
				</div>
				<br>

				<div class="upload-blog-text">
				<%= f.submit "設定を変更する", class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
	</div>
</div>