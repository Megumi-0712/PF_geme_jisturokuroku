<div class="container"></div>
<div class="container">
	<%= render 'users/user template', user: @user, blog: @blog %>
	<div class="col-xs-5">
		<h1 class="sub-title">ユーザー一覧</h1>

		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td>
						<%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", :size =>'50x50' %>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= link_to "気になる" , user_path(user.id)%>
					</td>
				</tr>
				<% end %>
				<%= paginate @users %>
			</tbody>
		</table>
	</div>
</div>
