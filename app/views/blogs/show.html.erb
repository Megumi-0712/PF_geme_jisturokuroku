<div class="container">
	<div class="col-xs-4"></div>
	<div class="col-xs-5">
		<h1 class="sub-title">ブログ</h1>
		<h3 class="blog-title">
			<%= @blog.title %>
		</h3>
		</br>
		<div class="blog-text">
			<%= @blog.blog_text %>
		</div>
		</br>

		<ul>

			<p class="blog-date">
			<span><%= @blog.created_at.strftime('%Y/%m/%d') %>	
				<% if @blog.user == current_user %>
				<%= link_to "ブログを編集する", blog_path(@user) %>
				<%= link_to "削除", edit_blog_path(@blog), method: :delete %>
			<% end %>
			</span>
			<div class="comment">
				<p><%= @blog.comments.count %>件コメント</p>
			</div>
			</p>
		</ul>

		<h2 class="sub-title">コメント一覧</h2>
			<% if @comments.any? %>
				<% @blog.comments.each do |comment| %>
					<div class="comment-user">
						<p><%= link_to "#{comment.user.name}さん", user_path(comment.user.id) %>
						<%= comment.comment_post %></p>
					</div>

					<span class= "comment-date"><%= @comment.created_at.strftime('%Y/%m/%d') %></span>
					<div class="comment-entry"><%= comment.comment_post %></div>

					<% if @blog.user == current_user %>
						<%= link_to"削除", blog_path(@blog.id), method: :delete, class: "btn btn-danger btn-xs", "data-confirm" => "本当に消しますか？" %>
					<% end %>
				<% end %>
			<% end %>

		<!--コメント投稿フォーム-->
		<% if user_signed_in? %>
			<%= form_for [@blog, @comment] do |f| %>
				<div class="row">
					<div class="col-sm-12">
						<%= f.text_area :comment_post, rows:'5', class: "form-control", placeholder:"コメントをここに" %>
					</div>
				</div>
				<br>
				<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
			<% end %>
		<% end %>

		<!--コメントフォームここまで-->

	</div>
</div>