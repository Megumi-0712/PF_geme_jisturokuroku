<div class="container">
	<div class="col-xs-4"></div>
	<div class="col-xs-5">
		<h2>ブログ一覧画面</h2>
		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<table class="table table-hover">
			<tbody>
			<% @blogs.each do |blog| %>
				<td>
					<h4 class="blog-title"><%= link_to blog.title, blog_path(blog.id) %></h4>
					<p class="blog-updatetime"><%= blog.created_at %></p>
				</td>
				<td>
					<%= link_to "#{blog.blog_comments.count}コメント", blog_path(@blog.id) %>
				</td>
			<% end %>
			</tbody>
		</table>
	</div>
</div>