<div class="container">
	<div class="col-xs-4"></div>
	<div class="col-xs-5">
		<h1 class="sub-title">ブログ一覧画面</h1>
		<table class="table table-hover">
			<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>
			<tbody>
			<% @blogs.each do |blog| %>
				<tr>
					<td>
						<h4 class="blog-title"><%= link_to blog.title, blog_path(blog.id) %></h4>
					</td>
					<td>
						<p class="blog-updatetime"><%= blog.created_at %></p>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>