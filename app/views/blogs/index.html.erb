<div class="container">
	<div class="col-xs-4"></div>
	<div class="col-xs-5">
		<h1 class="sub-title">ブログ一覧画面</h1>
		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<table class="table table-hover">
			<tbody>
			<% @blogs.each do |blog| %>
				<td>
					<h4 class="blog-title"><%= link_to blog.title, blog_path(blog.id) %></h4>
					<p class="blog-updatetime"><%= blog.created_at %></p>
				</td>
			<% end %>
			</tbody>
		</table>
	</div>
</div>