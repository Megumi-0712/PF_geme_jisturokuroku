<div class="container">
	<div class="col-xs-4"></div>
	<div class="col-xs-5">
		<h1 class="sub-title">ブログの編集</h1>

		<!--form_for-->

		<%= form_for(@blog) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>text</h4>
			<%= f.text_area :blog_text %><br>

			<%= f.submit '変更する' %>
		<% end %>

		<%= link_to "編集を取り消す", '/blogs' %>
	</div>
</div>