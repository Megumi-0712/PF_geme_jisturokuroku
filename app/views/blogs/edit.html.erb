<div class="container">
	<div class="col-xs-2"></div>
	<div class="col-xs-8">
		<h1 class="sub-title">ブログの編集</h1>

		<!--form_for-->

		<%= form_for(@blog) do |f| %>

			<div class="field">
				<h4>記事のタイトル</h4>
				<%= f.text_field :title %>
			</div>
			<br>
			<br>

			<div class="field">
	    		<h4>記事のタイトル</h4>
	    		<%= f.text_area :blog_text, 'data-provider': :summernote %>
			</div>

			<br>

				<div class="upload-blog-text">
					<%= f.submit '変更する', class: "btn btn-success" %>
				</div>
		<% end %>

		<!--form_forここまで-->

		<%= link_to "編集を取り消す", blog_path %>
	</div>
</div>